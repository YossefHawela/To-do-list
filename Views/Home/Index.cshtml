@using Microsoft.AspNetCore.Html
@model IEnumerable<ToDoModel>

@{
    ViewData["Title"] = "Home Page";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">📝 To-Do List</h2>
        <span class="badge bg-secondary">@Model.Count() item(s)</span>
    </div>

    <div>
        <partial name="PartialViews/ToDoListControl" model="Model" />
    </div>

    <div class="mb-4">
        <partial name="PartialViews/AddToDoItemControl" model="new ToDoModel()" />
    </div>
</div>

<script src="~/js/UpdatableToDoScript.js"></script>
