@model ToDoModel

@{
    var deadlineStr = DateTime.Now.ToString("yyyy-MM-ddTHH:mm");
}

<form asp-action="Add" asp-controller="ToDo" method="post" class="card shadow-sm mb-4 w-100">
    <input type="hidden" asp-for="Id" value="@Guid.NewGuid()" />

    <div class="card-body">
        <div class="mb-3">
            <input asp-for="Title" class="form-control" placeholder="Title" required pattern=".*\S.*" />
            <span asp-validation-for="Title" class="text-danger small"></span>
        </div>

        <div class="mb-3">
            <input asp-for="Description" class="form-control" placeholder="Description" required pattern=".*\S.*" />
        </div>

        <div class="mb-3">
            <input type="datetime-local" asp-for="DeadLineTime" class="form-control"
                   min="@deadlineStr" placeholder="Deadline" />
        </div>

        <button type="submit" class="btn btn-primary w-100">Add</button>
    </div>
</form>
